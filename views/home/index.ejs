<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head.ejs') -%>
    <%- include('../partials/nav.ejs') -%>
  </head>
  <body>
    <nav>
      <div class="row-nav">
        <nav>

        </nav>
        <div class="indexHome">
        <a class="home" href="/home/new"><button type="button" name="button" class="new-product three columns">New Product</button></a>
        <form class="home" action="/sessions?_method=DELETE" method="POST">
            <input type="submit" value="Logout" class="waves-effect waves-light btn"/>
        </form>
        </div>
      </div>
    </nav>
    <div class="index-container">
      <h1>For your better future</h1>
      <div class="products">
        <% products.forEach( function (product) { %>
          <div class="card">
            <h3 class="products-font"> <%= product.name  %></h3>
            <a href="/home/<%=product.id%>">
              <img src="<%= product.img %>" alt="An image of <%= product.name %>" /></a>
              <h3 class="products-font">Price: $<%=product.price %></h3>
          </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
