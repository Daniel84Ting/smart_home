<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head.ejs') -%>
  </head>
    <body>
      <nav>
        <div class="row-nav">
          <a href="/smart_home" id="store" class="six columns"><img src="/image/smart_logo.png"></a>
          <span class="three columns">&nbsp;</span>
          <div class="header">
              <h1 class="nav-h1">Smart Home Future</h1>
          </div>
          <span class="one column">&nbsp;</span>
      </div>
      </nav>
      <div class="container">
        <h1>Log In</h1>
        <div class="row">
            <form class="col s12" action="/sessions" method="POST">
            <div class="row">
              <div class="input-field col s6">
                <input placeholder="User Name" id="username" type="text" class="validate" name="username" required>
                <label for="username"></label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input placeholder="Password" id="password" type="password" class="validate" name="password" required>
                <label for="password"></label>
              </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            </button>
          </form>
        </div>
        <div class="session-page">

        </div>
    </body>
</html>